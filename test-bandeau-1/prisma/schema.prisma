// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id           String    @id
  shop         String
  state        String
  isOnline     Boolean   @default(false)
  scope        String?
  expires      DateTime?
  accessToken  String
  userId       BigInt?
  firstName    String?
  lastName     String?
  email        String?
  accountOwner Boolean   @default(false)
  locale       String?
  collaborator Boolean?  @default(false)
  emailVerified Boolean? @default(false)
}

model BannerConfig {
  id              Int      @id @default(autoincrement())
  shop            String   @unique
  message         String
  backgroundColor String   @default("#000000")
  textColor       String   @default("#ffffff")
  isEnabled       Boolean  @default(true)
  updatedAt       DateTime @updatedAt
  textAlign       String   @default("center")
}

model Settings {
  id             Int     @id @default(autoincrement())
  shop           String  @unique
  companyName    String?
  address        String?
  logoUrl        String?
  
  brandColor     String  @default("#000000")
  secondaryColor String  @default("#555555")
  titleColor     String  @default("#000000")
  
  layout         String  @default("classic")
  logoSize       Int     @default(50)
  fontSize       Int     @default(10)
  signatureUrl   String?
  showWatermark  Boolean @default(true)
  font           String  @default("Helvetica")

  // --- NOUVEAUX CHAMPS SÉPARÉS ---
  siret          String?  // Numéro SIRET
  tvaIntra       String?  // Numéro TVA
  legalInfo      String?  // Autres mentions (ex: SARL au capital de...)
  // NOUVEAUX CHAMPS EMAIL
  smtpEmail      String?
  smtpPassword   String? // Le mot de passe d'application
  // NOUVEAU CHAMP
  language       String  @default("fr") // "fr", "en", "es", "de", "it"
  // NOUVEAU : Langue de l'interface
  uiLanguage     String  @default("fr")
}